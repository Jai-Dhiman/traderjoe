# TraderJoe Configuration Template
# Copy to .env and fill in your actual values

# Database Configuration (REQUIRED)
DATABASE_URL=postgresql://postgres:postgres@localhost/traderjoe_dev

# Optional database connection settings
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=1

# API Keys (Optional - stubs will be used if not provided)
EXA_API_KEY=your_exa_api_key_here
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
NEWS_API_KEY=your_news_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_PRIMARY_MODEL=llama3.2:3b
LLM_FALLBACK_MODEL=gpt-4o-mini
LLM_TIMEOUT_SECONDS=30

# Trading Configuration
PAPER_TRADING=true
MAX_POSITION_SIZE_PCT=5.0
MAX_DAILY_LOSS_PCT=3.0
MAX_WEEKLY_LOSS_PCT=10.0

# Logging
RUST_LOG=info
LOG_FILE=logs/traderjoe.log
