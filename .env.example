# TraderJoe Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE (Supabase)
# =============================================================================
# Get your connection string from: Supabase Project Settings > Database > Connection String
# Format: postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres
# Note: Use the "Transaction" pooler for better performance
DATABASE_URL=postgresql://localhost/traderjoe

# Optional: Override default connection pool settings
# Defaults are optimized for Supabase (max=5, min=1)
# DB_MAX_CONNECTIONS=5
# DB_MIN_CONNECTIONS=1

# =============================================================================
# MARKET DATA API
# =============================================================================
# Required: Get free API key from https://polygon.io
POLYGON_API_KEY=your_polygon_api_key_here

# =============================================================================
# RESEARCH & INTELLIGENCE API
# =============================================================================
# Required: Get API key from https://exa.ai
EXA_API_KEY=your_exa_api_key_here

# =============================================================================
# EMBEDDINGS API
# =============================================================================
# Required: GitHub Models API token (https://github.com/marketplace/models)
# Used for text embeddings via text-embedding-3-small
GITHUB_TOKEN=your_github_token_here

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# LLM Provider: "ollama" (local), "cerebras" (cloud), or "openrouter" (cloud)
LLM_PROVIDER=ollama

# Ollama (local) - default: http://localhost:11434
OLLAMA_URL=http://localhost:11434
PRIMARY_MODEL=llama3.2:3b
FALLBACK_MODEL=gpt-4o-mini

# Cerebras (cloud) - optional
CEREBRAS_API_KEY=your_cerebras_api_key_here
CEREBRAS_URL=https://api.cerebras.ai/v1

# OpenRouter (cloud) - optional
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_URL=https://openrouter.ai/api/v1

# LLM timeout in seconds
LLM_TIMEOUT_SECONDS=30

# =============================================================================
# ADDITIONAL API KEYS (Optional)
# =============================================================================
# OpenAI - optional, for GPT models
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic - optional, for Claude models
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Reddit - optional, for social sentiment
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

# News API - optional, for news sentiment
NEWS_API_KEY=your_news_api_key_here

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Paper trading mode (true=simulated, false=real money - NOT IMPLEMENTED YET)
PAPER_TRADING=true

# Risk management settings
MAX_POSITION_SIZE_PCT=5.0
MAX_DAILY_LOSS_PCT=3.0
MAX_WEEKLY_LOSS_PCT=10.0
